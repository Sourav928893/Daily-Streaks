<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.sourav.streaks.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_streakDetails"
            app:destination="@id/streakDetailsFragment" />
        <action
            android:id="@+id/action_global_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.sourav.streaks.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/streakDetailsFragment"
        android:name="com.sourav.streaks.ui.home.StreakDetailsFragment"
        android:label="Streak Details"
        tools:layout="@layout/fragment_streak_details">
        <argument
            android:name="streak"
            app:argType="com.sourav.streaks.data.Streak"
            app:nullable="false" />
        <action
            android:id="@+id/action_streakDetails_to_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>